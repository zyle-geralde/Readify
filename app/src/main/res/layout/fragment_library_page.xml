<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6E8DD"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shapev3"
            android:backgroundTint="#24233E"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Saved Books"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="101dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#7E2626"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Etni's eLibrary"
                    android:textColor="#FFFEAE96"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DCDCDB"
                        android:src="@drawable/book___copy"
                        app:srcCompat="@drawable/book___copy" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="2 books read"
                        android:textColor="#ffffffc2" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:src="@drawable/readify__1____copy" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/savedBooksView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="480px"
                        android:layout_height="480px"
                        android:layout_weight="0"
                        android:background="@drawable/philosophy"
                        app:srcCompat="@drawable/philosophy" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="0"
                        android:text="dfjahsdjkfhajksdhfkjsahdfjkahsdfkjhasjkdfhaskjdfaaaaaaaaaaaaakkkkkkkkkkkkkkkkkkkkkkkeeeeeeeeeeeeeeeeeeeerrrrrrrrrrrrrrrrrrrmmmmmmmmmmmmmmmmbbbbbbbbbbbbbbbgjasdf"
                        android:textSize="45px"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_weight="0"
                        android:src="@drawable/delete" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>