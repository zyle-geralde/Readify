<!-- shadow_and_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Adjust shadow color and alpha as needed -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Shape -->
    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color2" />
            <stroke
                android:width="1dp"
                android:color="#C4CDE0" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
